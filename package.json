{
  "name": "@nrk/core-components",
  "homepage": "https://static.nrk.no/core-components/latest/",
  "author": "NRK <opensource@nrk.no> (https://www.nrk.no/)",
  "version": "7.1.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nrkno/core-components.git"
  },
  "scripts": {
    "build": "rollup --config",
    "install": "node -r esm bin/index.js --install",
    "outdated": "node -r esm bin/index.js --outdated",
    "publish:patch": "node -r esm bin/index.js --publish=patch",
    "publish:minor": "node -r esm bin/index.js --publish=minor",
    "publish:major": "node -r esm bin/index.js --publish=major",
    "start": "rollup --config --watch",
    "static-publish": "npm run build && static-publish --directory=packages --account=nrk-core --latest --major",
    "pretest": "webdriver-manager update",
    "test": "node -r esm node_modules/.bin/protractor bin/test.js && standard -v",
    "test-remote": "NODE_ENV=test-remote node -r esm node_modules/.bin/protractor bin/test.js && standard -v"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "7.5.5",
    "@nrk/custom-element-to-react": "1.1.0",
    "@webcomponents/custom-elements": "^1.2.4",
    "dotenv": "^8.1.0",
    "esm": "3.2.25",
    "fast-glob": "3.0.4",
    "jasmine-ajax": "^4.0.0",
    "jasmine-spec-reporter": "^4.2.1",
    "protractor": "^5.4.2",
    "rollup": "1.19.4",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.0.2",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-serve": "1.0.1",
    "rollup-plugin-uglify": "6.0.2",
    "standard": "13.1.0"
  },
  "standard": {
    "globals": [
      "HTMLElement",
      "protractor",
      "jasmine",
      "describe",
      "it",
      "expect",
      "browser",
      "$",
      "$$",
      "beforeEach",
      "beforeAll",
      "afterEach",
      "afterAll",
      "ExpectedConditions"
    ]
  }
}
