{
  "name": "@nrk/core-components",
  "homepage": "https://static.nrk.no/core-components/latest/",
  "author": "NRK <opensource@nrk.no> (https://www.nrk.no/)",
  "version": "5.5.5",
  "license": "MIT",
  "scripts": {
    "build": "rollup --config",
    "install": "node bin/index.js --install",
    "publish:patch": "node bin/index.js --publish=patch",
    "publish:minor": "node bin/index.js --publish=minor",
    "publish:major": "node bin/index.js --publish=major",
    "start": "rollup --config --watch",
    "static-publish": "npm run build && static-publish --directory=packages --account=nrk-core --latest --major",
    "test": "npm run build && jest packages/core-dialog",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/preset-env": "7.4.3",
    "jest": "24.7.1",
    "jest-buble": "2.0.0",
    "jest-puppeteer": "^4.1.1",
    "puppeteer": "^1.14.0",
    "rollup": "1.9.0",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "9.3.4",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "4.2.1",
    "rollup-plugin-serve": "1.0.1",
    "rollup-plugin-uglify": "6.0.2",
    "standard": "12.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nrkno/core-components.git"
  },
  "standard": {
    "ignore": [
      "docs"
    ],
    "globals": [
      "HTMLElement",
      "describe",
      "it",
      "before",
      "after",
      "beforeEach",
      "afterEach",
      "test",
      "expect",
      "jest"
    ]
  },
  "jest": {
    "preset": "jest-puppeteer",
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.jsx$": "jest-buble"
    }
  }
}
