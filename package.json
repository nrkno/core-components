{
  "name": "@nrk/core-components",
  "homepage": "https://static.nrk.no/core-components/latest/",
  "author": "NRK <opensource@nrk.no> (https://www.nrk.no/)",
  "version": "1.0.1",
  "license": "MIT",
  "main": "bundle/core-components.min.js",
  "jsx": "bundle/core-components.jsx.js",
  "scripts": {
    "build": "rollup --config",
    "install": "node bin/index.js --install",
    "lint": "standard packages/**/*.{js,jsx}",
    "publish:patch": "npm run build && node bin/index.js --publish=patch",
    "publish:minor": "npm run build && node bin/index.js --publish=minor",
    "publish:major": "npm run build && node bin/index.js --publish=major",
    "start": "rollup --config --watch",
    "static-publish": "npm run build && static-publish publish --directory ./bundle --package ./package.json --verbose --latest",
    "test": "npm run lint && npm run build && jest"
  },
  "devDependencies": {
    "jest": "^22.4.2",
    "rollup": "0.57.1",
    "rollup-plugin-buble": "0.19.2",
    "rollup-plugin-commonjs": "9.1.0",
    "rollup-plugin-json": "2.3.0",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-serve": "0.4.2",
    "rollup-plugin-uglify": "3.0.0",
    "standard": "11.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nrkno/core-components.git"
  },
  "standard": {
    "globals": [ "describe", "expect", "test" ]
  }
}
