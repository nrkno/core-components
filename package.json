{
  "name": "@nrk/core-components",
  "homepage": "https://static.nrk.no/core-components/latest/",
  "author": "NRK <opensource@nrk.no> (https://www.nrk.no/)",
  "version": "1.3.7",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:code && npm run build:docs",
    "build:code": "rollup --config",
    "build:docs": "stylemark -i packages -o docs -c .stylemark.yml",
    "install": "node bin/index.js --install",
    "lint": "standard",
    "publish:patch": "npm run build && node bin/index.js --publish=patch",
    "publish:minor": "npm run build && node bin/index.js --publish=minor",
    "publish:major": "npm run build && node bin/index.js --publish=major",
    "start": "npm-run-all --parallel start:code start:docs",
    "start:code": "npm run build:code -- --watch",
    "start:docs": "npm run build:docs -- -w -b",
    "static-publish": "npm run build && static-publish --directory=docs --account=nrk-core --latest --major",
    "test:js": "jest",
    "test": "npm run lint && jest"
  },
  "devDependencies": {
    "buble-jest": "^1.0.1",
    "jest": "^23.0.1",
    "npm-run-all": "^4.1.3",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "rollup": "0.59.4",
    "rollup-plugin-buble": "0.19.2",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-json": "3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-uglify": "4.0.0",
    "standard": "11.0.1",
    "stylemark": "^0.6.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nrkno/core-components.git"
  },
  "standard": {
    "ignore": [
      "docs"
    ],
    "globals": [
      "describe",
      "it",
      "before",
      "after",
      "beforeEach",
      "afterEach",
      "test",
      "expect"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "buble-jest"
    }
  }
}
