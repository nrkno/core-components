{
  "name": "@nrk/core-components",
  "homepage": "https://static.nrk.no/core-components/latest/",
  "author": "NRK <opensource@nrk.no> (https://www.nrk.no/)",
  "version": "5.5.6",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nrkno/core-components.git"
  },
  "scripts": {
    "build": "rollup --config",
    "install": "node bin/index.js --install",
    "publish:patch": "node bin/index.js --publish=patch",
    "publish:minor": "node bin/index.js --publish=minor",
    "publish:major": "node bin/index.js --publish=major",
    "start": "rollup --config --watch",
    "static-publish": "npm run build && static-publish --directory=packages --account=nrk-core --latest --major",
    "test": "npm run build && ava -v && standard -v",
    "test:watch": "ava -w"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "ava": "^1.4.1",
    "esm": "^3.2.22",
    "fast-glob": "^2.2.6",
    "jsdom": "^15.1.0",
    "puppeteer": "^1.15.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rollup": "^1.10.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-uglify": "^6.0.2",
    "standard": "^12.0.1"
  },
  "ava": {
    "require": [
      "esm"
    ],
    "babel": {
      "testOptions": {
        "presets": [
          "@babel/preset-react"
        ]
      }
    }
  },
  "standard": {
    "globals": [
      "HTMLElement"
    ]
  }
}
